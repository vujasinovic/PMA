<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_marginTop="10dp"
    android:orientation="vertical">


    <TextView
        android:id="@+id/historyPlace"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:textColor="@color/textPrimary"
        android:textSize="18dp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/labelPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/historyPlace"
        android:layout_marginLeft="10dp"
        android:text="Price:  "
        android:textColor="@color/textPrimary" />

    <TextView
        android:id="@+id/historyPrice"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_below="@id/historyPlace"
        android:layout_toRightOf="@+id/labelPrice"
        android:text=" 250 $"
        android:textColor="@color/textPrimary" />

    <TextView
        android:id="@+id/labelDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/labelPrice"
        android:layout_marginLeft="10dp"
        android:text="Description:  "
        android:textColor="@color/textPrimary" />

    <TextView
        android:id="@+id/historyDescription"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_below="@id/labelPrice"
        android:layout_toRightOf="@+id/labelDescription"
        android:text="Transport for sugar"
        android:textColor="@color/textPrimary" />

    <TextView
        android:id="@+id/labelCapacity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/labelDescription"
        android:layout_marginLeft="10dp"
        android:text="Capacity:  "
        android:textColor="@color/textPrimary" />

    <TextView
        android:id="@+id/historyCapacity"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_below="@id/labelDescription"
        android:layout_toRightOf="@+id/labelCapacity"
        android:text=" 5t"
        android:textColor="@color/textPrimary" />


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true">

        <ImageButton
            android:id="@+id/acceptOfferButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginRight="10dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_more"
            android:tint="@color/secondary" />
    </RelativeLayout>

</RelativeLayout>