<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.transportivo">

    <application
        android:name=".TransportivoApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_app"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_app_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <meta-data android:name="com.google.android.geo.API_KEY" android:value="AIzaSyD0DD-YS_VUpZAgpBSUE2nxNAzvtoGFYsM"/>

        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".TransportivoActivity" />
        <activity android:name=".activity.PlacePickerActivity" />

        <provider
            android:name=".provider.OffersProvider"
            android:authorities="com.example.transportivo.provider.OffersProvider" />
        <provider
            android:name=".provider.ReservationProvider"
            android:authorities="com.example.transportivo.provider.ReservationProvider" />
    </application>

</manifest>